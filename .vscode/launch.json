    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter App (Android Emulator)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define=API_URL=http://10.0.2.2:8080"
            ],
            "preLaunchTask": "shelf",
            // "postDebugTask": "Stop Shelf Server"
        },
        {
            "name": "Flutter App (iOS Simulator)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define=API_URL=http://localhost:8080"
            ],
            "preLaunchTask": "shelf",
            "postDebugTask": "Stop Shelf Server"
        },
        {
            "name": "Flutter App (Web)",
            "request": "launch",
            "type": "dart",
            "args": [
                "-d",
                "chrome",
                "--dart-define=API_URL=http://localhost:8080"
            ],
            "preLaunchTask": "shelf",
            "postDebugTask": "Stop Shelf Server"
        },
        {
            "name": "Flutter App (Generic)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define=API_URL=http://localhost:8080"
            ],
            "preLaunchTask": "shelf",
            "postDebugTask": "Stop Shelf Server"
        },
        {
            "name": "agricola",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "agricola (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "agricola (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ],
    "compounds": [
        {
            "name": "Android + Backend",
            "configurations": ["Flutter App (Android Emulator)"],
            "presentation": {
                "order": 1
            }
        },
        {
            "name": "Web + Backend",
            "configurations": ["Flutter App (Web)"],
            "presentation": {
                "order": 2
            }
        },
        {
            "name": "iOS + Backend",
            "configurations": ["Flutter App (iOS Simulator)"],
            "presentation": {
                "order": 3
            }
        },
        {
            "name": "Generic + Backend",
            "configurations": ["Flutter App (Generic)"],
            "presentation": {
                "order": 4
            }
        }
    ]
}
